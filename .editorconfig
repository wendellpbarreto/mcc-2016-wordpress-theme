# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.html]
indent_size = 4
[*.scss]
indent_size = 4

# 2 space indentation
[*.js]
indent_size = 2
[*.coffee]
indent_size = 2
